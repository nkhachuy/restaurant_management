@model NhaHang_Web.Models.KHACHHANG

@{
    ViewBag.Title = "ThemKhachHang";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}


<hr />
<h2 style="color: blue; text-align: center; font-weight: bold">THÊM KHÁCH HÀNG MỚI</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label text-left col-md-2" style="text-align: left;">Tên khách hàng</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TENKH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENKH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label text-left col-md-2" style="text-align: left;">Ngày sinh</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NGAYSINH, "{0:dd/MM/yyyy}", new { @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.NGAYSINH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label text-left col-md-2" style="text-align: left;">Địa chỉ</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label text-left col-md-2" style="text-align: left;">Số điện thoại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label text-left col-md-2" style="text-align: left;">Tài khoản</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TAIKHOAN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TAIKHOAN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label text-left col-md-2" style="text-align: left;">Mật khẩu</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MATKHAU, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="Thêm" class="btn btn-success text-center" style="text-align: center;" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("DanhSachKH", "KhachHang")" class="btn btn-primary">Trở về</a>
</div>
