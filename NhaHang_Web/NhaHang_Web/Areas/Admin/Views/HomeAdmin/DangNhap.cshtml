
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Admin đăng nhập</title>

    <link href="~/Areas/Admin/Conntet/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Conntet/css/metisMenu.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Conntet/css/startmin.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Conntet/css/font-awesome.min.css" rel="stylesheet" />
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">NHẬP THÔNG TIN ĐĂNG NHẬP</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Admin" name="user" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <div class="form-group">
                                    <p class="text-danger">
                                        @TempData["error"]
                                    </p>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Ghi nhớ
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-lg btn-success btn-block">ĐĂNG NHẬP</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/Areas/Admin/Conntet/js/jquery.min.js"></script>>

    <script src="~/Areas/Admin/Conntet/js/bootstrap.min.js"></script>

    <script src="~/Areas/Admin/Conntet/js/metisMenu.min.js"></script>

    <script src="~/Areas/Admin/Conntet/js/startmin.js"></script>

</body>

</html>
