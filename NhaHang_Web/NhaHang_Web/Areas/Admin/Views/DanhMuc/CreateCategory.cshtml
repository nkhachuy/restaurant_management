@model NhaHang_Web.Models.LOAIMONAN

@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<br />
<h2 style="text-align: center; color: blue; font-weight: bold" class="text-body">THÊM VÀO DANH MỤC MÓN ĂN</h2>

@using (Html.BeginForm("CreateCategory", "DanhMuc", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <button class="btn btn-primary">THÊM DANH MỤC</button>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">MÃ LOẠI MÓN ĂN</label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.MALOAI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MALOAI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">TÊN LOẠI MÓN ĂN</label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.TENLOAI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENLOAI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-danger" />
            </div>
        </div>
    </div>
}



<div>
    <button class="btn btn-warning"> <a style="color: black; text-decoration: none" href="~/Admin/DanhMuc/DanhMuc"><span style="color: black; text-decoration: none">Quay lại trang trước</span></a></button>
</div>
