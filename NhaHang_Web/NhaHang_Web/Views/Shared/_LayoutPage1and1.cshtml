    <header style="background-color: yellow">
        <a href="~/Home/TrangChu" class="logo_main"><i class="fa-solid fa-bowl-rice"></i>&nbsp CƠM QUÊ</a>

        <nav class="navbar_main">
            <a href="~/Home/TrangChu">TRANG CHỦ</a>
            <a href="~/GioiThieu/GioiThieu">GIỚI THIỆU</a>
            <a href="~/Menu/MenuLoaiMonAn">MENU</a>
